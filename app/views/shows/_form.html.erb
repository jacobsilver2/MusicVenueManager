<% if @show.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@show.errors.count, "error") %> prohibited this show from being saved:</h2>
 
    <ul>
    <% @show.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


<%= form_for @show do |f| %>

  <div class="field"> <%= f.label :date %><br>
  <%= f.date_select(:date, :order => [:month, :day, :year]) %></div>

  <div class="field"><%= f.label :start_time %><br>
  <%= f.time_select :start_time,
    :combined => true,
    :default => Time.now.change(:hour => 11, :min => 30),
    :minute_interval => 30,
    :time_separator => "",
    :start_hour => 16,
    :start_minute => 30,
    :end_hour => 23,
    :ampm => true,
    :end_minute => 30
   %></div>

  <div class="field"><%= f.label :confirmed %><br>
  <%= f.check_box :confirmed %></div>

  <div class="field"><%= f.label :notes %><br>
  <%= f.text_area :notes %></div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
