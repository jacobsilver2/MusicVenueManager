<p id="notice"><%= notice %></p>

  <div class="info">
    <p><strong>Date:</strong> <%= @show.format_date %></p>
    <p><strong>Start Time:</strong> <%= @show.format_time %></p>
    <p><strong>Confirmed?:</strong> <%= @show.format_confirmed %></p>
    <p><strong>Notes:</strong> <%= @show.notes %> </p>
    <% if user_signed_in? %>
      <p><%= link_to 'Add Act', new_show_act_path(@show), method: :new  %></p>
      <p><%= link_to 'Edit Date, time, or add notes', [:edit, @show] %></p>
      <p><%= link_to 'Delete Show', show_path(@show), method: :delete  %></p>
    <% end %>
    <%= link_to 'Back', shows_path %></p>
  </div>
</div>


